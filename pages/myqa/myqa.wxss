/* pages/myqa/myqa.wxss */

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 40rpx;
}

.weui-tab__panel {
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.weui-tab__content {
  padding-top: 10px;
  text-align: center;
}

.weui-navbar__item.weui-bar__item_on {
  color: #19b955;
}

.weui-navbar__slider {
  background-color: #19b955;
}

.weui-navbar {
  background: white;
}

.my_question_box {
  padding: 10rpx;
  text-align: left;
  width: 95%;
  display: flex;
  margin: 40rpx auto 20rpx;
  background: white;
  box-shadow: 0rpx 0rpx 15rpx 0rpx rgba(25, 185, 85, 0.75) inset;
  border-radius: 15rpx;
  flex-direction: column;
}

.my_question_title {
  margin: 10rpx 0 30rpx 30rpx;
}

.message_box {
  display: flex;
  margin-left: 30rpx;
  flex-direction: row;
  font-size: 14px;
  color: #8a8a8a;
  justify-content: center;
  margin-bottom: 20rpx;
}
.answer_message_box{
   display: flex;
  margin-left: 30rpx;
  flex-direction: row;
  font-size: 14px;
  color: #8a8a8a;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.view_detail{
  margin-right:20rpx;
}
