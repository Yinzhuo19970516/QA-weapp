<view class="container">
  <!--左侧栏-->
  <view class="nav_left">
    <block wx:for="{{cateItems}}" wx:key="index">
      <!--当前项的id等于item项的id，那个就是当前状态-->
      <!--用data-index记录这个数据在数组的下标位置，使用data-id设置每个item的id值，供打开2级页面使用-->
      <view class="nav_left_items {{curNav == item.cate_id ? 'active' : ''}}" bindtap="switchRightTab" data-index="{{index}}" data-id="{{item.cate_id}}">{{item.cate_name}}</view>
    </block>
  </view>
  <!--右侧栏-->
  <view class="nav_right">
    <!--如果有数据，才遍历项-->
    <view wx:if="{{cateItems[curIndex].ishaveChild}}">
      <block wx:for="{{cateItems[curIndex].children}}" wx:key="curIndex">
        <view class="nav_right_items">
        <!--界面跳转 -->
          <navigator url="../detail/detail?cate_id=item.cateItems[curIndex].cate_id&child_id=item.child_id}}">
            <text>{{item.title}}</text>
            <view class="warp">
            <view>悬赏积分:{{item.jifen_acount}}</view>
            <view>已有回答/可参与人数:{{item.answer_acount}}/{{item.join_acount}}</view>
            <view>发起时间:{{item.time}}</view>
            </view>
          </navigator>
        </view>
      </block>
    </view>
    <!--如果无数据，则显示数据-->
    <view class="nodata_text" wx:else>该分类暂无数据</view>
  </view>
  <view class="animals {{animals_flag?'animals_hover':'animals_normal'}}" bindtap='exchange_animals'></view>
  <view class="question_little_box" wx:if="{{animals_flag}}"></view>
  <view class="question_box" wx:if="{{animals_flag}}"  bindtap='jumpToQusetion'>
    我要提问
  </view>
</view>