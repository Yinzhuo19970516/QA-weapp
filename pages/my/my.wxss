/* pages/my/my.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:30rpx;
  margin-bottom:20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.content{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.content .icon{
  width:70rpx;
  height:70rpx;
  margin:10rpx 20rpx 20rpx 30rpx;
}
.content .title{
  font-weight: 400;
  padding-top:20rpx;
}