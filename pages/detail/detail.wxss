/* pages/detail/detail.wxss */
.page{
  display: flex;
  padding: 20rpx;
  flex-direction: column;
}
.title{
  font-size:22px;
}
.info-box{
  font-size:12px;
  color:#8a8a8a;
  justify-content: space-between;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.touxiang{
  width:75rpx;
  height:75rpx;
  border-radius: 50%;
  background-repeat: no-repeat;
  background-size:contain;
}
.desc{
  font-size:18px;
}
.btn{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top:30rpx;
  margin-bottom:30rpx;
}
.answer_box,textarea{
  width:95%;
  display: flex;
  padding:20rpx;
  margin:30rpx auto 20rpx;
  background: white;
  box-shadow:0rpx 0rpx 15rpx 0rpx rgba(25,185,85,0.75) inset;
  border-radius: 15rpx;
  flex-direction: column;
}
.answer_info_box{
  display: flex;
  flex-direction: row;
  font-size:12px;
  color:#8a8a8a;
}
.name{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left:30rpx;
}