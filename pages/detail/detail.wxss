/* pages/detail/detail.wxss */

.page {
  display: flex;
  padding: 20rpx;
  flex-direction: column;
}

.title {
  font-size: 22px;
  margin: 10rpx;
}

.info-box {
  font-size: 12px;
  color: #8a8a8a;
  justify-content: space-between;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx;
}

.touxiang {
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
}

.desc {
  font-size: 18px;
  text-indent: 1em;
  margin: 10rpx;
}

.btn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.answer_box, input ,textarea{
  width: 95%;
  display: flex;
  padding: 20rpx;
  margin: 30rpx auto 20rpx;
  background: white;
  box-shadow: 0rpx 0rpx 15rpx 0rpx rgba(25, 185, 85, 0.75) inset;
  border-radius: 15rpx;
  flex-direction: column;
  
}
.answer_input{
  height:40rpx;
}
.answer_info_box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 12px;
  color: #8a8a8a;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 0 20rpx;
}

.content {
  font-size: 16px;
  text-indent: 1em;
  margin: 10rpx 10rpx 30rpx;
}

.title {
  margin-top: 20rpx;
}

.view_more {
  margin-right: 20rpx;
}

/* pages/loading/loading.wxss */

.enter-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 600rpx;
  position: absolute;
  background: #fff;
  box-shadow: 0rpx 0rpx 40rpx 0rpx rgba(146, 79, 26, 0.5) inset;
  border-radius: 15rpx;
  white-space: wrap;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -45%);
  z-index:999;
}

.logo {
  display: block;
  height: 213rpx;
  width: 193rpx;
  margin-top:40rpx;
}

.introduction {
  margin: 10rpx;
  padding: 20rpx;
}

.enter-button {
  width: 40%;
  margin-top: 20rpx;
  margin-bottom:40rpx;
}

.loading-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
}
