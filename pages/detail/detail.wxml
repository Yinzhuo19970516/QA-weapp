<!--pages/detail/detail.wxml-->
<!-- <web-view src="https://yz.lynskylate.com?options={{options}}"></web-view> -->
<view class="page">
  <view class="title">{{question.title}}</view>
  <view class="info-box">
    <view>
      <view class="touxiang" style="background:url({{question.avatarUrl}});background-size:contain;"></view>
      <view class="questioner">{{question.nickname}}</view>
    </view>
    <view>
      <view class="belong">分类:{{question.belong}}</view>
      <view class="time">发布时间:{{question.time}}</view>
    </view>
    <view>
      <view class="jifen">悬赏积分:{{question.jifen_acount}}</view>
      <view class="answer">已有回答/可参与人数:{{question.answer_acount}}/{{question.join_acount}}</view>
    </view>
  </view>
  <view class="desc">
    {{question.des}}
  </view>
  <view class="btn">
    <button  type="primary">邀请回答</button>
    <button type="primary" bindtap="jumpToQuestion">我要提问</button>
  </view>
  
  <view class="myanswer">
    <form bindsubmit="bindFormSubmit">
      <textarea class="myanswer_input" placeholder="在这里写你的回答" name="textarea" />
      <button form-type="submit" class="weui-btn" type="primary">提交</button>
    </form>
  </view>
  <view>全部回答（2）</view>
  <block wx:for="{{question.answer}}" wx:key="index">
    <view class="answer_box">
      <view class="content">{{question.answer[index].content}}</view>
      <view class="answer_info_box">
        <view class="touxiang" style="background:url({{question.answer[index].answer_avatarUrl}});background-size:contain;"></view>
        <view class="name">
          <text class="questioner">{{question.answer[index].answer_nickname}}</text>
          <text>回答时间:{{question.answer[index].time}}</text>
        </view>
      </view>
    </view>
  </block>
</view>