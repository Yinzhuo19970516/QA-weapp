/**app.wxss**/
@import "weui.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.animals {
  display: block;
  height: 180rpx;
  width: 120rpx;
  background-image: url(http://129.204.118.251:1234/bishe/animals.png);
  /* background-size: cover; */
  background-repeat: none;
  cursor: pointer;
  position: fixed;
  right: 0;
  top: 800rpx;
  z-index: 1000;
}

.animals_hover {
  background-position: -14px 95px;
}

.animals_normal {
  background-position: -14px -140px;
}
.question_little_box{
  position: fixed;
  top:770rpx;
  right:90rpx;
  background: rgba(25,185,85,0.75);
  color: white;
  border-radius: 50%;
  width:50rpx;
  height:40rpx;
}
.question_box{
  background: rgba(25,185,85,0.75);
  position: fixed;
  top:700rpx;
  right:120rpx;
  color:white;
  border-radius: 60rpx;
  padding:15rpx;
  font-size:16px;
}
